{
    "name": "ngtfkx/laradeck-flash-messages",
    "type": "library",
    "description": "Send and view multiple messages (success, error, info, warning) for user with Laravel FlashData",
    "keywords": [
        "ngtfkx",
        "laradeck-flash-messages",
        "laradeck",
        "message",
        "session",
        "laravel",
        "php"
    ],
    "homepage": "https://github.com/ngtfkx/laradeck-flash-messages",
    "license": "MIT",
    "authors": [
        {
            "name": "Denis Sandal",
            "email": "den.sandal@gmail.com",
            "homepage": "https://github.com/ngtfkx",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Ngtfkx\\Laradeck\\FlashMessages\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ngtfkx\\Laradec\\FlashMessages\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {},
    "config": {
        "sort-packages": true
    }
}
